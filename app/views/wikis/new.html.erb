<div class="container">
    <div class="wiki">
        <%= form_for @wiki do |f| %>
        
            <div class="field input-group wiki-title">
                <%= f.label :title %>
                <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="wiki-body">
                <%= f.label :body %>
                <%= f.text_area :body, class: "form-control wiki-body" %>
            </div>
            
            <% if current_user.premium? || current_user.admin? %>
                <div class="field radio wiki-private">
                    <%= f.check_box :private %>
                    <%= f.label :private %>
                </div>
            <% else %>
                <div class="field radio wiki-private">
                    <%= f.check_box :private, disabled: true %>
                    <%= f.label :private %> (Premium users) 
                </div>
            <% end %>
            
            <div class="wiki-save">
                <%= f.submit "Save", class: "btn" %>
            </div>
            
        <% end %>
    </div>
</div>