<div class="container">
    <div class="wiki">

        <div class="row col-md-8">
            <%= form_for @wiki do |f| %>
                <div class="field input-group wiki-title">
                    <%= f.label :title %>
                    <%= f.text_field :title, autofocus: true, class: "form-control" %>
                </div>
                
                <div class="wiki-body">
                    <%= f.label :body %>
                    <%= f.text_area :body, class: "form-control wiki-body" %>
                </div>
                
                <% if policy(@wiki).private_wiki? %>
                    <div class="field radio wiki-private">
                        <%= f.check_box :private %>
                        <%= f.label :private %>
                    </div>
                <% else %>
                    <div class="field radio wiki-private">
                        <%= f.check_box :private, disabled: true %>
                        <%= f.label :private %> (Upgrade to Premium!)
                    </div>
                <% end %>
                
                <div class="wiki-save">
                    <%= f.submit "Save", class: "btn" %>
                </div>
                
            <% end %>
        </div>
    </div>
    <% if policy(@wiki).private_wiki? %>
        <div class="wiki">
            <div class="row col-md-8">
                <%= form_for [@wiki, Collaborator.new] do |f| %>
                    <div class="field input-group wiki-collab">
                        <div class="alert-info">
                            <%= flash[:alert] %>
                        </div>
                        <%= f.text_field :user %></br>
                        <%= f.submit "Add Collaborator", class: "btn btn-success" %>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
</div>